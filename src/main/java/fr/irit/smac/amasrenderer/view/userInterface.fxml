<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.embed.swing.SwingNode?>
<?import javafx.scene.control.TextArea?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1">
	<left>
		<BorderPane id="leftPane" minWidth="200">
			<top>
				<VBox alignment="TOP_CENTER" spacing="30" styleClass="cornerPane"
					minHeight="100">
					<Label text="INFRASTRUCTURE" styleClass="title" />
				</VBox>
			</top>

			<center>
				<VBox alignment="TOP_CENTER" spacing="20">
					<Label styleClass="title">
						SERVICES
					</Label>
					<Button onAction="#ajouterService">+ Ajouter un service</Button>
				</VBox>
			</center>
		</BorderPane>
	</left>

	<center>
		<BorderPane minWidth="300">
			<top>
				<VBox alignment="CENTER" spacing="10" minHeight="100" id="topPane">
					<Label styleClass="title">AgentHandler</Label>
					<Label>ClassName :</Label>
					<HBox alignment="CENTER" spacing="30">
						<Label>Nombre d'agents : </Label>
						<Label>Nombre de liens : </Label>
						<Button onAction="#ajouterAgent">+ Ajouter un agent</Button>
					</HBox>
				</VBox>
			</top>

			<center>
				<StackPane>
					<SwingNode fx:id="graphNode" onMouseClicked="#graphMouseClicked">
					</SwingNode>
				</StackPane>
			</center>
		</BorderPane>
	</center>

	<right>
		<BorderPane id="rightPane" minWidth="400">
			<top>
				<VBox alignment="TOP_CENTER" minWidth="200" minHeight="100"
					spacing="30" styleClass="cornerPane">
					<Label text="FICHIER JSON" styleClass="title" />
				</VBox>
			</top>

			<center>
				<VBox alignment="TOP_CENTER" minWidth="200" minHeight="100"
					spacing="20">
					<Label styleClass="title">
						ATTRIBUTS
					</Label>
					<Button onAction="#ajouterAttribut">+ Ajouter un attribut</Button>
				</VBox>
			</center>
			<bottom>
				<VBox alignment="TOP_CENTER" minWidth="200" minHeight="100"
					spacing="20">
					<Label styleClass="title">
						Synthese:
					</Label>
					<TextArea fx:id="attributes_synthesis" editable="false" prefHeight="600" prefWidth="200" text="No node selected, please click a node"  />
				</VBox>
			</bottom>
		</BorderPane>
	</right>

</BorderPane>


